    "copy-webpack-plugin": "^12.0.1",
    "daily-version": "^2.0.0",
    "dot-json": "^1.3.0",
    "file-loader": "^6.2.0",
    "jest": "^28.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "sass": "^1.69.5",
    "sass-loader": "^13.3.2",
    "size-plugin": "^3.0.0",
    "terser-webpack-plugin": "^5.3.9",
    "ts-jest": "^28.0.8",
    "ts-loader": "^9.5.1",
    "tslint": "^6.1.3",
