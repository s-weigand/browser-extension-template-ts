    "chrome-webstore-upload-cli": "^2.0.1",
    "copy-webpack-plugin": "^9.0.1",
    "daily-version": "^2.0.0",
    "dot-json": "^1.2.2",
    "file-loader": "^6.2.0",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "sass": "^1.42.1",
    "sass-loader": "^12.1.0",
    "size-plugin": "^3.0.0",
    "terser-webpack-plugin": "^5.2.4",
    "ts-jest": "^26.5.6",
    "ts-loader": "^9.2.6",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "typescript": "^4.4.3",
    "web-ext": "^6.4.0",
    "web-ext-submit": "^6.4.0",
    "webpack": "^5.56.0",
    "webpack-cli": "^4.8.0"
